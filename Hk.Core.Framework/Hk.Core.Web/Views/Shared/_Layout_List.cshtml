<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Scripts/easyui/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/Scripts/easyui/themes/icon.css?v=1702" rel="stylesheet" />
    <link href="~/Scripts/easyui/themes/color.css" rel="stylesheet" />
    <link href="~/Skin/global.css?v=1715" rel="stylesheet" />

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/easyui/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui/locale/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/util/util.js"></script>
    <script src="~/Scripts/config.js"></script>
    <script src="~/Scripts/util/easyui-extend.js"></script>
    <script src="~/Scripts/util/framework-util.js"></script>
    <script src="~/Scripts/vendor/md5/md5.min.js"></script>
    <script src="~/Scripts/business/requestbusiness.js"></script>
</head>
<body>
    <div id="loadingMask" class="datagrid-mask" style="position: absolute;display: block; z-index: 998; width: 100%; height: 100%;text-align:center;opacity:1;background:white;">
        @*<div class="datagrid-mask-msg" style="display: block; z-index: 999; top:45%; position:relative;width:179px;margin:0 auto;opacity:1">加载中，请稍候。。。</div>*@
        <div class="panel-loading" style="position: absolute;left: 0;z-index: 999;">Loading...</div>
    </div>
    <div class="easyui-layout" data-options="fit:true">
        <div data-options="region:'center',split:false,border:false" style="padding:10px;">
            @RenderBody()
        </div>
        @if (IsSectionDefined("toolbar") || IsSectionDefined("search"))
        {
            <div data-options="region:'north',border:false" style="padding:10px 10px 0 10px;">
                @if (IsSectionDefined("toolbar"))
                {
                    <div class="toolbar">
                        @RenderSection("toolbar", false)
                    </div>
                }
                @RenderSection("search", false)
            </div>
        }
        @if (IsSectionDefined("foottoolbar"))
        {
            <div data-options="region:'south',border:false" style="text-align:right;padding:10px 0 5px 0;">
                @RenderSection("foottoolbar", false)
            </div>
        }
    </div>
    <script type="text/javascript">
        $.parser.onComplete = function () {
            $('#loadingMask').remove();
        }
    </script>
</body>
</html>

